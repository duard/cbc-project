<div class="category" fxLayout="column" *ngIf="records$ | async as data; else noRecords">
  <table *ngFor="let record of data" class="list-group-item">
    <tr>
      <td>{{ record.name }}</td>
      <td><button (click)="reset()">Excluir</button></td>
      <td><button (click)="reset()">Show</button></td>
      <td><button (click)="reset()">Editar</button></td>
    </tr>
  </table>
</div>

<ng-template #noRecords>
  <p>No records</p>
</ng-template>
